<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_weight="1"
    android:background="#ffffff"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    >


    <LinearLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usertext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="个人头像"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/blank1"
            android:layout_width="172dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="  "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />


        <ImageView
            android:id="@+id/userimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/dnf"
            android:tag="imgeTitle"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/userimgname"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userimgtext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="个人昵称"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/blank2"
            android:layout_width="161dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="  "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="woshu"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />


        <ImageView
            android:id="@+id/jiantou1"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_right"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/userphonenumber"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userphonetext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="手机号码"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/blank3"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="  "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="15867978832"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />


        <ImageView
            android:id="@+id/jiantou2"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_right"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/userkey"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userkeytext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="修改密码"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/blank4"
            android:layout_width="121dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="  "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/userkeyblank"
            android:layout_width="81dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="          "
            android:textSize="14sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />


        <ImageView
            android:id="@+id/jiantou3"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_right"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/userreal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usertext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="实名认证"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/blank5"
            android:layout_width="161dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="  "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/userrealblank"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="未实名"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />


        <ImageView
            android:id="@+id/jiantou4"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_right"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="0dp" />



    </LinearLayout>







</LinearLayout>


